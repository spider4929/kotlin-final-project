<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.midterm.AboutFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recycler">

        <TextView
            android:id="@+id/txtAbout"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="10dp"
            android:text="About"
            android:textAppearance="@style/TextAppearance.Pathfinder.Subtitle"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle3" />

        <TextView
            android:id="@+id/txtTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="PathFinder"
            android:textAppearance="@style/TextAppearance.Pathfinder.Title"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="353dp"
            android:layout_height="267dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="This app was created for the Final Requirement in Emerging Technologies 3 in CPE, CPE026 \n instructed by Engr. Alonica Villanueva. \n\nThe app was created by students: \nBaturiano, Kristian John \nDones, Mickel Trystan \nJulongbayan, Dan Angelo and \nNazareno Jr. Franklin"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Pathfinder.TextBody"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAbout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>